{
  "family": "jogos-api-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::932732506622:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::932732506622:role/ecsAppRole",
  "containerDefinitions": [
    {
      "name": "jogos-api",
      "image": "REPLACED_BY_ACTION",
      "essential": true,
      "portMappings": [
        { "containerPort": 8080, "protocol": "tcp" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "sa-east-1",
          "awslogs-group": "/ecs/jogos-api",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "environment": [
        { "name": "ASPNETCORE_ENVIRONMENT", "value": "Production" }
      ]
    }
  ]
}
